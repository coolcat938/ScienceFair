  <script>
    //Function to find the number of sentences in a given text
    function numSentences(text){
      var sentences = text.split(".");
      return sentences.length;
    }

    //Function to find the number of words in each sentence
    function numWordsPerSentence(text){
      var words = text.split(" ");
      var sentenceArray = [];
      for(var i=0; i<words.length; i++){
        if(words[i] == "."){
          sentenceArray.push(words.slice(0,i));
          words = words.slice(i+1, words.length);
          i=-1;
        }
      }
      return sentenceArray.map(function(sentence){
        return sentence.length;
      });
    }

    //Function to find the number of letters in each word
    function numLettersPerWord(text){
      var words = text.split(" ");
      return words.
